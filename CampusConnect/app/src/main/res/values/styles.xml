<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryDark">@color/primaryGreen_Dark</item>
        <item name="colorAccent">@color/accentGold</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="colorButtonNormal">@color/primaryGreen</item>
        <item name="colorControlHighlight">@color/White</item>
        <item name="android:textColor">@color/primaryGreen_Dark</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="fonts">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
